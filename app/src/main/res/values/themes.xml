<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LandMarker_Travel_App" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!--STYLE FOR NIGHT MODE SWITCH-->
    <style name="nightModeSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/night_mode</item>
        <item name="colorSwitchThumbNormal">#FFFFFF</item>
        <item name="android:colorForeground">#99FFFFFF</item>
    </style>

    <!--STYLE FOR NOTIFICATIONS SWITCH-->
    <style name="notificationSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/notifications</item>
        <item name="colorSwitchThumbNormal">#FFFFFF</item>
        <item name="android:colorForeground">#99FFFFFF</item>
    </style>

    <!--STYLE FOR NIGHT MODE SWITCH-->
    <style name="metricSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/metric</item>
        <item name="colorSwitchThumbNormal">#FFFFFF</item>
        <item name="android:colorForeground">#99FFFFFF</item>
    </style>


    <!--STYLE FOR MOST VISITED SWITCH-->
    <style name="mostVisitedSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/security</item>
        <item name="colorSwitchThumbNormal">#FFFFFF</item>
        <item name="android:colorForeground">#99FFFFFF</item>
    </style>







    <!--LIGHT MODE-->
    <!--SCREEN BACKGROUND IF LIGHT MODE IS ON-->
    <style name="SCREEN">
        <item name="android:background">#4296A1</item>
    </style>


    <!--TEXTS BACKGROUND IF LIGHT MODE IS ON-->
    <style name="TEXT">
        <item name="android:textColor">#000000</item>
    </style>


    <!--BUTTON BACKGROUND IF LIGHT MODE IS ON-->
    <style name="BUTTON">
        <item name="android:background">@color/notifications</item>
        <item name="android:textColor">#FFF</item>
    </style>


</resources>